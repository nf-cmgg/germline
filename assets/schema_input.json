{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-cmgg/germline/master/assets/schema_input.json",
    "title": "nf-cmgg/germline pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9_\\.]+$",
                "meta": ["id", "sample"],
                "errorMessage": "Sample name should be a string that may contain underscores (_) and dots (.)"
            },
            "family": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9_\\.]+$",
                "meta": ["family"],
                "errorMessage": "Family name should be a string that may contain underscores (_) and dots (.)"
            },
            "cram": {
                "oneOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.cram$",
                        "format": "file-path",
                        "exists": true
                    },
                    {
                        "type": "string",
                        "pattern": "^watch:\\S+\\.cram$",
                        "format": "file-path"
                    }
                ]
            },
            "crai": {
                "oneOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.cram\\.crai$",
                        "format": "file-path",
                        "exists": true
                    },
                    {
                        "type": "string",
                        "pattern": "^watch:\\S+\\.cram\\.crai$",
                        "format": "file-path"
                    }
                ]
            },
            "gvcf": {
                "oneOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.g\\.vcf(\\.gz)?$",
                        "format": "file-path",
                        "exists": true
                    },
                    {
                        "type": "string",
                        "pattern": "^watch:\\S+\\.g\\.vcf(\\.gz)?$",
                        "format": "file-path"
                    }
                ]
            },
            "tbi": {
                "oneOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.g\\.vcf\\.gz\\.tbi$",
                        "format": "file-path",
                        "exists": true
                    },
                    {
                        "type": "string",
                        "pattern": "^watch:\\S+\\.g\\.vcf\\.gz\\.tbi?$",
                        "format": "file-path"
                    }
                ]
            },
            "roi": {
                "type": "string",
                "pattern": "^\\S+\\.bed(\\.gz)?$",
                "format": "file-path",
                "exists": true
            },
            "ped": {
                "type": "string",
                "pattern": "^\\S+\\.ped$",
                "format": "file-path",
                "exists": true
            },
            "truth_vcf": {
                "type": "string",
                "pattern": "^\\S+\\.vcf\\.gz$",
                "format": "file-path",
                "exists": true
            },
            "truth_tbi": {
                "type": "string",
                "pattern": "^\\S+\\.tbi$",
                "format": "file-path",
                "exists": true
            },
            "truth_bed": {
                "type": "string",
                "pattern": "^\\S+\\.bed$",
                "format": "file-path",
                "exists": true
            },
            "vardict_min_af": {
                "type": "number",
                "meta": ["vardict_min_af"]
            }
        },
        "required": ["sample"]
    },
    "dependentRequired": {
        "truth_tbi": ["truth_vcf"],
        "truth_bed": ["truth_vcf"],
        "tbi": ["gvcf"],
        "crai": ["cram"]
    }
}
