nextflow_pipeline {

    name "Full pipeline test"
    script "main.nf"
    tag "full_wgs"

    test("Success") {

        when {
            params {
                filter   = true
                annotate = true
                gemini   = true
                add_ped  = true
                validate = true

                roi      = null

                vcfanno           = true
                vcfanno_config    = "https://github.com/nf-core/test-datasets/raw/modules/data/genomics/homo_sapiens/genome/vcf/vcfanno/vcfanno.toml"
                vcfanno_resources = "https://github.com/brentp/vcfanno/raw/master/example/exac.vcf.gz,https://github.com/brentp/vcfanno/raw/master/example/exac.vcf.gz.tbi"

            }
        }

        then {
            def date = new java.text.SimpleDateFormat("yyyy-MM-dd").format(new Date())
            assert workflow.success
            assert file("${outputDir}/${date}_test/Proband_12345/reports/Proband_12345.bcftools_stats.txt").exists()
            assert file("${outputDir}/${date}_test/Proband_12345/Proband_12345.vcf.gz").exists()
            assert file("${outputDir}/${date}_test/Proband_12345/Proband_12345.db").exists()
            assert file("${outputDir}/${date}_test/Proband_12345/Proband_12345.ped").exists()
            assert file("${outputDir}/${date}_test/Proband_12345/Proband_12345.bed").exists()
            assert file("${outputDir}/${date}_test/Proband_12345/Proband_12345.samples.tsv").exists()
            assert file("${outputDir}/NA24385D2_NVQ_034/reports/NA24385D2_NVQ_034.bcftools_stats.txt").exists()
            assert file("${outputDir}/NA24385D2_NVQ_034/NA24385D2_NVQ_034.g.vcf.gz").exists()
            assert file("${outputDir}/NA24385D2_NVQ_034/NA24385D2_NVQ_034.g.vcf.gz.tbi").exists()
            assert file("${outputDir}/NA24385D2_NVQ_034/NA24385D2_NVQ_034.quantized.bed.gz").exists()
            assert file("${outputDir}/DNA049572/reports/DNA049572.bcftools_stats.txt").exists()
            assert file("${outputDir}/DNA049572/DNA049572.g.vcf.gz").exists()
            assert file("${outputDir}/DNA049572/DNA049572.g.vcf.gz.tbi").exists()
            assert file("${outputDir}/DNA049572/DNA049572.quantized.bed.gz").exists()
            assert file("${outputDir}/multiqc_reports/multiqc_report.html").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.fn.vcf.gz").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.fn.vcf.gz.tbi").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.fp.vcf.gz").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.fp.vcf.gz.tbi").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.non_snp_roc.tsv.gz").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.phasing.txt").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.png").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.snp_roc.tsv.gz").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.summary.txt").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.svg").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.tp-baseline.vcf.gz").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.tp-baseline.vcf.gz.tbi").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.tp.vcf.gz").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.tp.vcf.gz.tbi").exists()
            assert file("${outputDir}/DNA049572/validation/DNA049572.weighted_roc.tsv.gz").exists()
        }
    }
}
