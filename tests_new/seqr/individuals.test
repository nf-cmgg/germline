nextflow_pipeline {

    name "The individuals Seqr mode test"
    script "main.nf"
    config "tests/seqr/seqr.config"

    test("Success") {

        config "tests/seqr/individuals.config"

        expect {
            assertAll(
                { assert workflow.success }
                { assert snapshot( workflow ).match() }
                {
                    assert snapshot(
                        path("${outputDir}/ready/NA12878K12_NVQ_034/reports/NA12878K12_NVQ_034.TsTv.count"),
                        path("${outputDir}/ready/NA12878K12_NVQ_034/reports/NA12878K12_NVQ_034.bcftools_stats.txt"),
                        path("${outputDir}/ready/NA12878K12_NVQ_034/reports/NA12878K12_NVQ_034.FILTER.summary"),
                        path("${outputDir}/ready/NA24385D2_NVQ_034/reports/NA24385D2_NVQ_034.TsTv.count"),
                        path("${outputDir}/ready/NA24385D2_NVQ_034/reports/NA24385D2_NVQ_034.bcftools_stats.txt"),
                        path("${outputDir}/ready/NA24385D2_NVQ_034/reports/NA24385D2_NVQ_034.FILTER.summary")
                    ).match()
                    assert file("${outputDir}/ready/NA12878K12_NVQ_034/reports/NA12878K12_NVQ_034.TsTv.qual").exists()
                    assert file("${outputDir}/ready/NA24385D2_NVQ_034/reports/NA24385D2_NVQ_034.TsTv.qual").exists()
                }
                {
                    assert snapshot(
                        path("${outputDir}/ready/NA12878K12_NVQ_034/NA12878K12_NVQ_034.vcf.gz").linesGzip[68],
                        path("${outputDir}/ready/NA24385D2_NVQ_034/NA24385D2_NVQ_034.vcf.gz").linesGzip[68]
                    ).match()
                    assert file("${outputDir}/ready/NA12878K12_NVQ_034/NA12878K12_NVQ_034.vcf.gz.tbi").exists()
                    assert file("${outputDir}/ready/NA24385D2_NVQ_034/NA24385D2_NVQ_034.vcf.gz.tbi").exists()
                }
                { assert file("${outputDir}/multiqc_reports/multiqc_report.html").exists() }
                {
                    assert snapshot(
                        path("${outputDir}/individuals/NA24385D2_NVQ_034/NA24385D2_NVQ_034.g.vcf.gz").linesGzip[53],
                        path("${outputDir}/individuals/NA12878K12_NVQ_034/NA12878K12_NVQ_034.g.vcf.gz").linesGzip[53]
                    ).match()
                    assert file("${outputDir}/individuals/NA24385D2_NVQ_034/NA24385D2_NVQ_034.g.vcf.gz.tbi").exists()
                    assert file("${outputDir}/individuals/NA12878K12_NVQ_034/NA12878K12_NVQ_034.g.vcf.gz.tbi").exists()
                }
            )
        }
    }
}
